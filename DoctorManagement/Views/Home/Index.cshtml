@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center vh-70">
        <div class="col-md-8 text-center bg-light rounded shadow p-5">
            <h1 class="display-4 text-primary mb-4 fw-bold text-shadow">Welcome to Doctor Management</h1>
            <p class="lead text-secondary mb-5">Explore the features designed to streamline your practice and enhance patient care. Learn more about <a href="https://learn.microsoft.com/aspnet/core" class="text-success fw-semibold text-decoration-none">our comprehensive tools</a>.</p>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <a asp-action="Register" asp-controller="Doctor" class="btn btn-primary btn-lg px-4 rounded-pill fw-semibold">Get Started</a>
                <a asp-action="Login" asp-controller="Doctor" class="btn btn-outline-secondary btn-lg px-4 rounded-pill fw-semibold">Log In</a>
            </div>
        </div>
    </div>
</div>

<style>
    .vh-70 {
        min-height: 70vh; /* Adjust as needed for vertical centering */
    }

    .text-shadow {
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.05);
    }
</style>